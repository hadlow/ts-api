{
	"compilerOptions": {
		"target": "es2018",
		"rootDir": "src",
		"outDir": "build",
		"module": "commonjs",
		"lib": ["es6", "es2015", "dom"],
		"declaration": true,
		"strict": false,
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "**/tests/*", "coverage", "build"]
}
